@model IEnumerable<Student>
@{
    ViewBag.Title = "學生列表頁面";
    Layout = "_Layout";
    
}

<div class="card-deck">
    @foreach (var student in Model)
    {
        var photoPath = "~/images/avatars/" + (student.PhotoPath ?? "Image1.png");
    <div class="card m-3">
        <div class="card-header">
            <h3 class="card-title">@student.Name</h3>
        </div>

        <img src="@photoPath" class="card-img-top" asp-append-version="true" />

        <div class="card-body text-center">
            <h5 class="card-title">主修科目:@student.Major.GetDisplayName()</h5>
        </div>

        <div class="card-footer text-center">
            <a asp-controller="Home" asp-action="Details" asp-route-id="@student.EncryptedId" class="btn btn-primary m-1">查看</a>
            <a asp-controller="Home" asp-action="Edit" asp-route-id="@student.EncryptedId" class="btn btn-primary m-1">編輯</a>
            <a href="#" class="btn btn-primary m-1">刪除</a>
        </div>
    </div>
    }
</div>