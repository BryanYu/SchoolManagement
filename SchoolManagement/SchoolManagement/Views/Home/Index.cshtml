@model IEnumerable<Student>
@{
    ViewBag.Title = "學生列表頁面";
    Layout = "_Layout";
}

<div class="card-deck">
    @foreach (var student in Model)
    {
    <div class="card m-3">
        <div class="card-header">
            <h3 class="card-title">@student.Name</h3>
        </div>

        <img src="images/Image1.png" asp-append-version="true" />

        <div class="card-body text-center">
            <h5 class="card-title">主修科目:@student.Major</h5>
        </div>

        <div class="card-footer text-center">
            <a asp-controller="Home" asp-action="Details" asp-route-id="@student.Id" class="btn btn-primary m-1">查看</a>
            <a href="#" class="btn btn-primary m-1">編輯</a>
            <a href="#" class="btn btn-primary m-1">刪除</a>
        </div>
    </div>
    }
</div>