@model IEnumerable<Student>
@{
    ViewBag.Title = "學生列表頁面";
    Layout = "_Layout";
}

<div class="card-deck">
    @foreach (var student in Model)
    {
    <div class="card m-3">
        <div class="card-header">
            <h3 class="card-title">@student.Name</h3>
        </div>

        <img class="card-img-top" src="images/Image1.png" />

        <div class="card-body text-center">
            <h5 class="card-title">主修科目:@student.Major</h5>
        </div>

        <div class="card-footer text-center">
            <a href="#" class="btn btn-primary">查看</a>
            <a href="#" class="btn btn-primary">編輯</a>
            <a href="#" class="btn btn-primary">刪除</a>
        </div>
    </div>
    }
</div>