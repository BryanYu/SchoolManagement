@model SchoolManagement.ViewModels.HomeDetailsViewModel
@{
    ViewBag.Title = "學生詳情";
    Layout = "_Layout";
    var photoPath = "~/images/avatars/" + (Model.Student.PhotoPath ?? "Image1.png");
}
<div class="row justify-content-center m-3">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true"/>
                <h4>學生id:@Model.Student.Id</h4>
                <h4>郵箱:@Model.Student.Email</h4>
                <h4>主修科目:@Model.Student.Major.GetDisplayName()</h4>
            </div>
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary">返回</a>
                <a href="#" class="btn btn-primary">編輯</a>
                <a href="#" class="btn btn-primary">刪除</a>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/CustomerScript.js"></script>
}