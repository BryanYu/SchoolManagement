@model EditRoleViewModel
@{
    ViewBag.Title = "編輯角色";
}

<h1>編輯角色</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" clas="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled="disabled" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" clas="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control"/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">更新</button>
            <a asp-action="ListRoles" class="btn btn-primary">取消</a>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h3>該角色中的用戶</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">目前沒有用戶</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Admin" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width: auto">新增或刪除用戶</a>
        </div>
    </div>
</form>