@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "用戶列表";
}

<h1>所有用戶</h1>
@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account" class="btn btn-primary mb-3" style="width: auto">新增用戶</a>
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                用戶Id:@user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <a href="#" class="btn btn-primary">編輯</a>
                <a href="#" class="btn btn-primary">刪除</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            尚未新增用戶
        </div>
        <div class="card-body">
            <h5 class="card-title">
                點擊下面按鈕新增用戶
            </h5>
            <a class="btn btn-primary" style="width: auto" asp-controller="Account" asp-action="Register">新增用戶</a>
        </div>
    </div>
}
